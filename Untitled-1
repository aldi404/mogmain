<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jam Digital</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin-top: 20%; }
        #clock { font-size: 48px; }
    </style>
</head>
<body>
    <div id="clock">00:00:00:00</div>
    <script>
        function updateClock() {
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            const milliseconds = String(now.getMilliseconds()).padStart(3, '0').slice(0, 2); // ambil 2 digit pertama
            document.getElementById('clock').textContent = `${hours}:${minutes}:${seconds}:${milliseconds}`;
        }
        setInterval(updateClock, 100); // update setiap 100ms
    </script>
</body>
</html>
